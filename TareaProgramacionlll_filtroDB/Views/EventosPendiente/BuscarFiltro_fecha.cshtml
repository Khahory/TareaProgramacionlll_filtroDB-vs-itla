@model IEnumerable<TareaProgramacionlll_filtroDB.EventosPendiente>

@{
    ViewBag.Title = "BuscarFiltro_fecha";
}

<h2>BuscarFiltro_fecha</h2>

<p>
    @Html.ActionLink("Create New", "Create") ||
    @Html.ActionLink("Back to List", "Index")
    @using (Html.BeginForm("BuscarFiltro_fecha", "EventosPendiente", FormMethod.Get))
    {
        <text>
            Busqueda por fecha: @Html.TextBox("Fecha_inicial") <br />
            <input type="submit" name="" value="Buscar" />
        </text>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_evento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_inicial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_evento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_inicial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lugar)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.Id_eventoPendiente })
        </td>
    </tr>
}

</table>
